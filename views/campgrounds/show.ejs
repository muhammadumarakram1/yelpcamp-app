<% layout('layouts/main') %>

    <div class="card mb-2">
        <img src="<%= campground.image %>" alt="<%= campground.title %>" class="card-img-top">
        <div class="card-body">
            <h5 class="card-title">
                <%= campground.title %>
                    <span class="h6 text-muted">
                        $<%= campground.price %> per day
                    </span>
            </h5>
            <h5 class="text-muted">
                <%= campground.location %>
            </h5>
            <p class="card-text">
                <%= campground.description %>
            </p>
            <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
            <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post">
                <button class="btn btn-danger">Delete</button>
            </form>
            <a class="btn btn-secondary" href="/campgrounds">Back</a>
        </div>
    </div>